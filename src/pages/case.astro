---
import Layout from '../layouts/Layout.astro';
import TextField from '../components/TextField.astro';
import SelectField from '../components/SelectField.astro';
import { cases } from '../scripts/forms';
---

<Layout title="Consultora 143 - Donde aprender tiene un significado diferente.">
    <main class="h-screen">
        <div class="p-4 md:ml-64 bg-gray-100 dark:bg-gray-900 h-full overflow-y-auto grid grid-cols-12 gap-3">

            <div class="col-span-12 lg:col-span-6 p-4 mb-0 lg:mb-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
                
                <div class="grid grid-cols-12 gap-6">
                    <!-- Title -->
                    <h3 class="col-span-9 sm:col-span-10 md:col-span-10 lg:col-span-11 mb-4 text-xl font-semibold dark:text-white">
                        {cases[0].subtitle}
                    </h3>
                </div>
                
                <!-- <form action="#"> -->
                    <div class="grid grid-cols-12 gap-6">
                        {
                            cases[0].fields.map(elem => {
                                switch(elem.typeInput){
                                    case 'text' :   return (
                                                        <TextField data={elem} />
                                                    )
                                    case 'select' : return (
                                                        <SelectField data={elem} />
                                                    )
                                }
                            })
                        }

                        <div class="col-span-12">
                            <label
                                for="description"
                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                            >Descripción</label
                            >
                            <textarea 
                                id="description"
                                rows="6" 
                                class=" block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                placeholder="Descripción del caso"></textarea>
                        </div>
                        

                        <div class="col-span-12">
                            <button
                                class="text-white bg-[#146eab] hover:bg-[#146eab] font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-[#146eab] dark:hover:bg-[#146eab]"
                                type="submit">Actualizar datos</button
                            >
                        </div>
                    </div>
                <!-- </form> -->
            </div>

            <div class="col-span-12 lg:col-span-6 p-4 mb-4 flex flex-col justify-end bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">

                <div class="flex items-start gap-2.5 mb-2">
                    <img class="w-8 h-8 rounded-full" src="./../../public/profile-avatar-1.jpg" alt="Profile Image">
                    <div class="flex flex-col gap-1 w-full max-w-[320px]">
                        <div class="flex items-center space-x-2 rtl:space-x-reverse">
                            <span class="text-sm font-semibold text-gray-900 dark:text-white">
                                Carla Pérez
                            </span>
                            <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
                                11:46 am
                            </span>
                        </div>
                        <div class="flex flex-col leading-1.5 p-4 border-gray-200 bg-gray-100 rounded-e-xl rounded-es-xl dark:bg-gray-700">
                            <p class="text-sm font-normal text-gray-900 dark:text-white">
                                Eso es genial. Creo que nuestros usuarios realmente apreciarán las mejoras.
                            </p>
                        </div>
                        <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
                            Entregado
                        </span>
                    </div>
                    <button class="inline-flex self-center items-center py-2 px-1 text-sm font-medium text-center text-gray-900 bg-white rounded-lg hover:bg-gray-100 dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-600 dark:focus:ring-gray-600" type="button">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 4 15">
                            <path d="M3.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 6.041a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 5.959a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"/>
                        </svg>
                    </button>
                </div>

                <div class="flex items-start justify-end gap-2.5 mb-2">
                    <button class="inline-flex self-center items-center py-2 px-1 text-sm font-medium text-center text-gray-900 bg-white rounded-lg hover:bg-gray-100 dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-600 dark:focus:ring-gray-600" type="button">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 4 15">
                            <path d="M3.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 6.041a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 5.959a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"/>
                        </svg>
                    </button>
                    <div class="flex flex-col gap-1 w-full max-w-[320px]">
                        <div class="flex items-center justify-end space-x-2">
                            <span class="text-sm font-semibold text-gray-900 dark:text-white">
                                Rodrigo Sánchez
                            </span>
                            <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
                                12:24 pm
                            </span>
                        </div>
                        <div class="flex flex-col leading-1.5 p-4 border-gray-200 bg-gray-100 rounded-s-xl rounded-ee-xl dark:bg-gray-700">
                            <p class="text-sm font-normal text-gray-900 dark:text-white">
                                ¡Gracias! Estoy emocionado de ver cómo se desarrolla el proyecto.
                            </p>
                        </div>
                        <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
                            Entregado
                        </span>
                    </div>
                    <img class="w-8 h-8 rounded-full" src="./../../public/profile-avatar-2.jpg" alt="Profile Image">
                    
                </div>

                <div class="flex items-start gap-2.5 mb-2">
                    <img class="w-8 h-8 rounded-full" src="./../../public/profile-avatar-1.jpg" alt="Profile Image">
                    <div class="flex flex-col gap-1">
                        <div class="flex items-center space-x-2 rtl:space-x-reverse">
                            <span class="text-sm font-semibold text-gray-900 dark:text-white">
                                Carla Pérez
                            </span>
                            <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
                                02:11 pm
                            </span>
                        </div>
                        <div class="flex flex-col w-full max-w-[320px] leading-1.5 p-4 border-gray-200 bg-gray-100 rounded-e-xl rounded-es-xl dark:bg-gray-700">
                            <div class="flex items-start bg-gray-50 dark:bg-gray-600 rounded-xl p-2">
                                <div class="me-2">
                                <span class="flex items-center gap-2 text-sm font-medium text-gray-900 dark:text-white pb-2">
                                    <svg fill="none" aria-hidden="true" class="w-5 h-5 flex-shrink-0" viewBox="0 0 20 21">
                                        <g clip-path="url(#clip0_3173_1381)">
                                            <path fill="#E2E5E7" d="M5.024.5c-.688 0-1.25.563-1.25 1.25v17.5c0 .688.562 1.25 1.25 1.25h12.5c.687 0 1.25-.563 1.25-1.25V5.5l-5-5h-8.75z"/>
                                            <path fill="#B0B7BD" d="M15.024 5.5h3.75l-5-5v3.75c0 .688.562 1.25 1.25 1.25z"/>
                                            <path fill="#CAD1D8" d="M18.774 9.25l-3.75-3.75h3.75v3.75z"/>
                                            <path fill="#F15642" d="M16.274 16.75a.627.627 0 01-.625.625H1.899a.627.627 0 01-.625-.625V10.5c0-.344.281-.625.625-.625h13.75c.344 0 .625.281.625.625v6.25z"/>
                                            <path fill="#fff" d="M3.998 12.342c0-.165.13-.345.34-.345h1.154c.65 0 1.235.435 1.235 1.269 0 .79-.585 1.23-1.235 1.23h-.834v.66c0 .22-.14.344-.32.344a.337.337 0 01-.34-.344v-2.814zm.66.284v1.245h.834c.335 0 .6-.295.6-.605 0-.35-.265-.64-.6-.64h-.834zM7.706 15.5c-.165 0-.345-.09-.345-.31v-2.838c0-.18.18-.31.345-.31H8.85c2.284 0 2.234 3.458.045 3.458h-1.19zm.315-2.848v2.239h.83c1.349 0 1.409-2.24 0-2.24h-.83zM11.894 13.486h1.274c.18 0 .36.18.36.355 0 .165-.18.3-.36.3h-1.274v1.049c0 .175-.124.31-.3.31-.22 0-.354-.135-.354-.31v-2.839c0-.18.135-.31.355-.31h1.754c.22 0 .35.13.35.31 0 .16-.13.34-.35.34h-1.455v.795z"/>
                                            <path fill="#CAD1D8" d="M15.649 17.375H3.774V18h11.875a.627.627 0 00.625-.625v-.625a.627.627 0 01-.625.625z"/>
                                        </g>
                                        <defs>
                                            <clipPath id="clip0_3173_1381">
                                            <path fill="#fff" d="M0 0h20v20H0z" transform="translate(0 .5)"/>
                                            </clipPath>
                                        </defs>
                                    </svg>
                                    Términos y condiciones
                                </span>
                                <span class="flex text-xs font-normal text-gray-500 dark:text-gray-400 gap-2">
                                    12 Pages 
                                    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="self-center" width="3" height="4" viewBox="0 0 3 4" fill="none">
                                        <circle cx="1.5" cy="2" r="1.5" fill="#6B7280"/>
                                    </svg>
                                    18 MB 
                                    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="self-center" width="3" height="4" viewBox="0 0 3 4" fill="none">
                                        <circle cx="1.5" cy="2" r="1.5" fill="#6B7280"/>
                                    </svg>
                                    PDF
                                </span>
                                </div>
                                <div class="inline-flex self-center items-center">
                                <button class="inline-flex self-center items-center p-2 text-sm font-medium text-center text-gray-900 bg-gray-50 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-600 dark:hover:bg-gray-500 dark:focus:ring-gray-600" type="button">
                                    <svg class="w-4 h-4 text-gray-600 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M14.707 7.793a1 1 0 0 0-1.414 0L11 10.086V1.5a1 1 0 0 0-2 0v8.586L6.707 7.793a1 1 0 1 0-1.414 1.414l4 4a1 1 0 0 0 1.416 0l4-4a1 1 0 0 0-.002-1.414Z"/>
                                        <path d="M18 12h-2.55l-2.975 2.975a3.5 3.5 0 0 1-4.95 0L4.55 12H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-4a2 2 0 0 0-2-2Zm-3 5a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"/>
                                    </svg>
                                </button>
                                </div>
                            </div>
                        </div>
                        <span class="text-sm font-normal text-gray-500 dark:text-gray-400">Entregado</span>
                    </div>
                    <button class="inline-flex self-center items-center py-2 px-1 text-sm font-medium text-center text-gray-900 bg-white rounded-lg hover:bg-gray-100 dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-600 dark:focus:ring-gray-600" type="button">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 4 15">
                            <path d="M3.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 6.041a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 5.959a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"/>
                        </svg>
                    </button>
                </div>

                <div class="flex items-start gap-2.5 mb-2">
                    <!-- Barra de búsqueda -->
                    <form class="w-full" action="#" method="GET">
                        <!-- <label for="products-search" class="sr-only">Search</label> -->
                        <div class="relative w-full mt-1">
                            <input
                                type="text"
                                name="buscar"
                                id="products-search"
                                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                placeholder="Envia un mensaje..."
                                autocomplete="off"
                            />
                        </div>
                    </form>
                </div>

                

            </div>

        </div>
    </main>
</Layout>