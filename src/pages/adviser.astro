import Layout from '../layouts/Layout.astro';
import TextField from '../components/TextField.astro';
import SelectField from '../components/SelectField.astro';
import { advisers } from '../scripts/forms';
---

<Layout title="Consultora 143 - Donde aprender tiene un significado diferente.">
    <main class="h-screen">
        <div class="p-4 md:ml-64 bg-gray-100 dark:bg-gray-900 h-full overflow-y-auto">
            
            <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
                <div class="grid grid-cols-12 gap-6">
                    <!-- Title -->
                    <h3 class="col-span-9 sm:col-span-10 md:col-span-10 lg:col-span-11 mb-4 text-xl font-semibold dark:text-white">
                        {advisers[0].subtitle}
                    </h3>
                    <!-- Whatsapp -->
                    <a
                        class="w-9 h-9"
                        href={advisers[0].urlWp} target="_blank" rel="noopener noreferrer" class="">
